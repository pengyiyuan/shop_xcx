.index-swiper swiper {
  height: 500rpx;
}
.index-swiper swiper image {
  width: 100%;
}
.index-iconbar {
  display: flex;
  padding: 0 25rpx;
}
.index-iconbar navigator {
  flex: 1;
  padding: 25rpx;
  text-align: center;
  line-height: 10rpx;
}
.index-iconbar navigator image {
  width: 100%;
}
.index-iconbar navigator text {
  font-size: 25rpx;
  color: #333333;
}
.index-goods {
  display: flex;
  flex-wrap: wrap;
  padding: 0 25rpx;
}
.index-goods navigator {
  width: 50%;
  padding: 20rpx 10rpx;
}
.index-goods navigator image {
  width: 100%;
}
.index-goods navigator .goods-name {
  padding: 6rpx 13rpx;
  font-size: 27rpx;
  font-weight: 600;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.index-goods navigator .goods-desc {
  padding: 6rpx 13rpx;
  font-size: 23rpx;
  font-weight: 400;
  color: #333333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.index-goods navigator .goods-other {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx 13rpx;
}
.index-goods navigator .goods-other .goods-price {
  flex: 4;
  font-size: 27rpx;
  font-weight: 600;
  color: #ea961a;
}
.index-goods navigator .goods-other .goods-cart {
  flex: 1;
  display: flex;
  align-items: center;
}
